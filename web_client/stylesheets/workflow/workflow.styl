.analyses
    position absolute
    z-index 991
    display inline-block
    background rgba(255, 255, 255, 0.9)
    max-height 100vh
    overflow auto

.icon-left-dir
    float right
    display none

    &:before    
        box-shadow 2px 2px 7px 0px #eee
        background #eee
        border 1px solid #e2e2e42e
        border-radius 3px
        cursor w-resize
.icon-right-dir
    float right
    display none

    &:before    
        box-shadow 2px 2px 7px 0px #eee
        background #eee
        border 1px solid #e2e2e42e
        border-radius 3px
        cursor e-resize
.analysesNames
    .g-global-nav-main
        >ul.g-global-nav
            >li
                pointer-events auto  

.g-analyses-nav-container
    width 40vw
    height calc(100vh - 52px)
    display inline-block
    transition 1s
    position absolute
    left 0vw
    margin-left 0vw
.taskNavPanel.panel
    margin-bottom 0px 
    background-color rgba(0,0,0,0)
    border 0px solid
    border-radius 0px
    box-shadow 0 1px 1px rgba(0,0,0,.05) 
    list-style none
.taskNavPanel.panel:hover
    background-color #f6f6f6
    transition all 0.2s
    
.analyses-body
    width 60vw
    float right
    height calc(100vh - 52px)
    transition 1s
.analysisControl,.Processing
    height 100%
    overflow-y auto
    
.progressPanel
    height 100%
    padding-left 0px
    
.analysesTag
    margin-left 30px
    margin-right 10px
    overflow auto
    max-height 300px